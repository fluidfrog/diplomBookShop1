<Page x:Class="DiplomApp.Pages.EmptyOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DiplomApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmptyOrderPage">

    <Grid Background="#BBDED6">
        <StackPanel Width="300" Height="300" Background="#61C0BF">
            <TextBlock Text="Корзина пуста" Foreground="White" HorizontalAlignment="Center" FontSize="24" FontFamily="Cascadia Code SemiBold" Margin="5"></TextBlock>
            <TextBlock FontSize="72" Foreground="White" HorizontalAlignment="Center" Margin="0 10 0 0">🛒</TextBlock>
            <Button x:Name="BEmptyOrder" Content="Перейти к покупкам" Background="#FFB6B9" BorderBrush="#FFFFB6B9" Foreground="White" FontFamily="Cascadia Code SemiBold" FontSize="24" Height="40" Margin="10 50 10 5" Click="BEmptyOrder_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
